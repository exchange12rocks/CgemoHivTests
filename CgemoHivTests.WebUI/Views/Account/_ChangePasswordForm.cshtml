@model CgemoHivTests.WebUI.Models.ChangePasswordModel

@using (Ajax.BeginForm("SavePassword", new AjaxOptions { OnSuccess = "OnChangePasswordSuccess" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" onclick="modDialogHide('#modChangePassword')" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Изменить пароль</h4>
        </div>
        <div id="formMessageBox"></div>
        <div class="modal-body">
            @Html.ValidationSummary()
            @Html.EditorFor(model => model.UserName)
                      
            <div class="form-group has-feedback">
                @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "control-label" })
                <div class="input-group">
                    <span class="input-group-addon"></span>
                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control password-group", @required = "required" } })
                </div>
            </div>
            <div class="form-group has-feedback">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                <div class="input-group">
                    <span class="input-group-addon"></span>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control password-group", @required = "required" } })
                    <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                </div>
            </div>
            <div class="form-group has-feedback">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                <div class="input-group">
                    <span class="input-group-addon"></span>
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control password-group", @required = "required" } })
                    <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                </div>
            </div>          
        </div>
        <div class="modal-footer">
            <div class="container-fluid">
                <div class="row">                   
                    <button type="button" onclick="modDialogHide('#modChangePassword')" class="btn btn-default">Close</button>
                    <button type="submit" id="savePassword" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
}
