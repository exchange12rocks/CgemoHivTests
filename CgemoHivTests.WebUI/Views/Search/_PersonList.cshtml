@model IEnumerable<CgemoHivTests.BusinessLogic.DTO.PersonAnalysisDTO>

@if (Model != null)
{
    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <tr>
                <th>
                    @Html.Label("№")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportDateOfIssue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertDateOfIssue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnalysisDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnalysisResult)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr @*style="@if(item.IsDublicate)
                           {
                               @:background-color:orange
                           } "*@>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PassportNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PassportDateOfIssue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CertNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CertDateOfIssue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnalysisDate)
                    </td>
                    <td>
                        @if (!item.AnalysisResult)
                        {
                            @:Отрицательный
                        }
                        else
                        {
                            @:Положительный
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
}
