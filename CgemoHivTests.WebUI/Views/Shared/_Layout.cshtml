@using System.Web.Optimization

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
</head>
<body>        
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">Информационная система ФБУЗ "Центр гигиены и эпидемиологии в МО"</a>
            </div>
            @using (Html.BeginForm("LogOff", "Account"))
            {
            <div class="navbar-form navbar-right">
                <button type="submit" class="btn btn-warning">
                    <span class="glyphicon glyphicon-user" aria-
                          hidden="true"></span> Выйти
                </button>
            </div>
            }
            <p class="navbar-text navbar-right">Вы зашли как <a href="#" class="navbar-link">Mark Otto</a></p>
        </div>        
    </nav>        
    <div class="container-fluid">             
        <div class="row">
            <div class="row">
                <div class="col-sm-9 col-md-10 col-sm-offset-3 col-md-offset-2">
                    @RenderSection("message", false)
                </div>
            </div>
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li @if (ViewBag.SelectedPage == "Import")
                        { @: class="active" 
                        }>@Html.ActionLink("Импорт", "Index", "ImportFile")</li>
                    <li @if (ViewBag.SelectedPage == "Search")
                        { @: class="active" 
                        }>@Html.ActionLink("Поиск по базе", "Index", "Search")</li>
                    <li @if (ViewBag.SelectedPage == "Users")
                        { @: class="active"
                        }>@Html.ActionLink("Пользователи", "Users", "Account")</li>
                    <li><a href="#">Analytics</a></li>
                    <li><a href="#">Export</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="">Nav item</a></li>
                    <li><a href="">Nav item again</a></li>
                    <li><a href="">One more nav</a></li>
                    <li><a href="">Another nav item</a></li>
                    <li><a href="">More navigation</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="">Nav item again</a></li>
                    <li><a href="">One more nav</a></li>
                    <li><a href="">Another nav item</a></li>
                </ul>
            </div>           
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">                                          
                @RenderBody()               
            </div>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryunob")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", false)        
</body>
</html>
